{
  "env": {
    "node": true,
    "browser": true,
    "jest": true,
  },
  "extends": "airbnb-base",
  settings: {
    "import/resolver": {
      node: { extensions: [".js", ".mjs"] }
    }
  },
  "rules": {
    "import/extensions": ["error", "always", {
      js: "ignorePackages",
      mjs: "always",
    }],
    "comma-dangle": ["error", "never"],
    "no-use-before-define": ["off"],
    "no-unused-vars": ["warn"],
    "no-shadow": ["off"],
    "no-plusplus": ["off"]
  }
}
